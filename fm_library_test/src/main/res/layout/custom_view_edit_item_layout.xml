<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/edit_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/custom_common_margin_little"
        android:textSize="@dimen/level2_textview_text_size"
        android:textColor="@color/main_grey"
        android:text="" />
    
    <TextView
        android:id="@+id/edit_item_mark_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/custom_common_margin_little"
        android:text="*"
        android:textColor="@color/main_red"
        android:textSize="@dimen/level2_textview_text_size"
        android:visibility="invisible" />
    
   
    
    <EditText
        android:id="@+id/edit_item_content_et"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="left|center_vertical"
        android:layout_marginRight="@dimen/custom_common_margin_little"
        android:hint="输入内容"
        android:textSize="@dimen/level2_textview_text_size"
        android:textColor="@color/main_black"
        android:background="@android:color/transparent" />
    
    <TextView
        android:id="@+id/edit_item_content_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="left|center_vertical"
        android:layout_marginRight="@dimen/custom_common_margin_little"
        android:textSize="@dimen/level2_textview_text_size"
        android:textColor="@color/main_black"
        android:visibility="gone" />    
</LinearLayout>