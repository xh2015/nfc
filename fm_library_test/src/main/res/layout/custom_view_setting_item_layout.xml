<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/setting_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/level2_textview_text_size"
        android:textColor="@color/main_black"
        android:text="手机号" />
    
    <TextView
        android:id="@+id/setting_item_hint_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_marginRight="@dimen/custom_common_margin"
        android:textSize="@dimen/level2_textview_text_size"
        android:textColor="@color/main_grey"
        android:text="手机号" />  
    
    <ImageView
        android:id="@+id/setting_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/icon_setting_arrow" />
    
</LinearLayout>