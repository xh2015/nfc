<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/net_request_loading_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            style="@style/progressBarStyleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/net_request_loading_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/net_request_loading"
            android:textColor="#ffc0c0c0"
            android:textSize="@dimen/level2_textview_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/net_request_loading_error_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/net_request_loading_error"
        android:textColor="#ffc0c0c0"
        android:textSize="@dimen/level2_textview_text_size" />

</FrameLayout>